<div class="row">
    <div class="col-md-6">
		<div ba-panel ba-panel-class="with-scroll">
      		<div class="form-horizontal">
				<table class="table table-bordered" id="database">
					<thead>
						<tr>
							<td>Conn Type</td>
							<td>Conn Name</td>
							<td>Module</td>
							<td>Action</td>
						</tr>
					</thead>
	      			<tbody>
		      			<tr ng-repeat="base in db.database">
		      				<td>{{ base.connType }}</td> 
		      				<td>{{ base.connName }}</td>
		      				<td>{{ base.module }}</td>
		      				<td>
		      					<a class="btn btn-danger btn-xs" ng-click="deleteBase(base)"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
		      				</td>
		      			</tr>
	      			</tbody>
	      		</table>
			</div>
      	</div>
    </div>

    <div class="col-md-6">
      	<div ba-panel ba-panel-title="Connection Database Setting">
			<form class="form-horizontal" name="databaseForm" ng-submit="submitDatabaseForm(databaseForm.$valid)" novalidate>
				<div class="form-group has-feedback"
		           ng-class="{'has-error': databaseForm.module.$invalid && (databaseForm.module.$dirty || databaseForm.$submitted)}">
		          <label for="module" class="col-sm-2 control-label">Module</label>
		          <div class="col-sm-10">
		            <input type="text" class="form-control" id="module" name="module" ng-model="module" required>
		            <span class="help-block error-block basic-block">Required</span>
		          </div>
		      	</div>

	      		<div class="form-group">
			    	<label class="col-sm-2 control-label">Connection Type</label>
			    	<div class="col-sm-10">
						<select name="connType" class="form-control"
						  ng-model="connType"
						  required selectpicker>
						  <option value="" disabled selected>Select your option</option>
						  <option value="TRM">TRM</option>
						  <option value="CPM">CPM</option>
						  <option value="DFS">DFS</option>
						</select>
			    	</div>
			  	</div>

		      	<div class="form-group has-feedback"
		           ng-class="{'has-error': databaseForm.connName.$invalid && (databaseForm.connName.$dirty || databaseForm.$submitted)}">
		          <label for="connName" class="col-sm-2 control-label">Connection Name</label>
		          <div class="col-sm-10">
		            <input type="text" class="form-control" id="connName" name="connName" ng-model="connName" required>
		            <span class="help-block error-block basic-block">Required</span>
		          </div>
		      	</div>

		      	<div class="form-group has-feedback"
		           ng-class="{'has-error': databaseForm.hostname.$invalid && (databaseForm.hostname.$dirty || databaseForm.$submitted)}">
		          <label for="hostname" class="col-sm-2 control-label">Hostname</label>
		          <div class="col-sm-10">
		            <input type="text" class="form-control" id="hostname" name="hostname" ng-model="hostname" required>
		            <span class="help-block error-block basic-block">Required</span>
		          </div>
		      	</div>

		      	<div class="form-group has-feedback"
		           ng-class="{'has-error': databaseForm.port.$invalid && (databaseForm.port.$dirty || databaseForm.$submitted)}">
		          <label for="port" class="col-sm-2 control-label">Port</label>
		          <div class="col-sm-10">
		            <input type="text" class="form-control" id="port" name="port" ng-model="port" required>
		            <span class="help-block error-block basic-block">Required</span>
		          </div>
		      	</div>

		      	<div class="form-group has-feedback"
		           ng-class="{'has-error': databaseForm.service.$invalid && (databaseForm.service.$dirty || databaseForm.$submitted)}">
		          <label for="service" class="col-sm-2 control-label">Service/SID</label>
		          <div class="col-sm-10">
		            <input type="text" class="form-control" id="service" name="service" ng-model="service" required>
		            <span class="help-block error-block basic-block">Required</span>
		          </div>
		      	</div>

		      	<div class="form-group has-feedback"
		           ng-class="{'has-error': databaseForm.username.$invalid && (databaseForm.username.$dirty || databaseForm.$submitted)}">
		          <label for="username" class="col-sm-2 control-label">Username</label>
		          <div class="col-sm-10">
		            <input type="text" class="form-control" id="username" name="username" ng-model="username" required>
		            <span class="help-block error-block basic-block">Required</span>
		          </div>
		      	</div>

		      	<div class="form-group has-feedback"
		           ng-class="{'has-error': databaseForm.password.$invalid && (databaseForm.password.$dirty || databaseForm.$submitted)}">
		          <label for="password" class="col-sm-2 control-label">Password</label>
		          <div class="col-sm-10">
		            <input type="text" class="form-control" id="password" name="password" ng-model="password" required>
		            <span class="help-block error-block basic-block">Required</span>
		          </div>
		      	</div>

		      	<div class="form-group has-feedback"
		           ng-class="{'has-error': databaseForm.database.$invalid && (databaseForm.database.$dirty || databaseForm.$submitted)}">
		          <label for="databasename" class="col-sm-2 control-label">Database Name</label>
		          <div class="col-sm-10">
		            <input type="text" class="form-control" id="databasename" name="databasename" ng-model="databasename" required>
		            <span class="help-block error-block basic-block">Required</span>
		          </div>
		      	</div>


				</br>	  
		  		<button type="submit" class="btn btn-info btn-xs" >Save</button>
	  		</form>
		</div>	
	</div>
</div>


