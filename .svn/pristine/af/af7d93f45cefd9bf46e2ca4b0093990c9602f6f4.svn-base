<form class="form-horizontal" name="restartServiceForm" ng-submit="submitRestartServiceForm(roleForm.$valid)" novalidate>

	   <div class="modal-header bg-info">
	     	<i class="{{ icon }} modal-icon"></i><span>{{ action }}</span>
	   </div>
  		
  		<div class="modal-body">
  			<installation-wizard>
	  			<installation-wizard-step>
			  		<div class="form-horizontal">

			  			<table width="100%">
			  				<tr>
			  					<td width="30%">
			  						<center><img src="/assets/img/bar-chart2.png" style="width: 100% "></center>
			  					</td>
			  					<td width="70%" style="padding: 20px;">

			  						<div style="height: 230px; overflow: auto; border: 1px solid; padding: 10px;">
			  							<b>Welcome to the Installation Process Patch </br>for TRM Module Version 2.5</b>
			  							<br/>
			  							<br/>
			  							The content of Changes is:
			  							<br/>
			  							<br/>
			  							Perubahan yang dilakukan pada proses update
			  							<br/>
			  							<br/>
			  							Module: {{module}}
			  							<br/>
			  							Description: {{description}}
			  							<br/>
			  							Version: {{version}}
			  							<br/>
			  							<br/>
			  							<br/>
			  							When you have installed this module, click Next to begin the installation
			  							<br/>
			  							<br/>
			  							<br/>
			  							<br/>
			  						</div>
			  						<small>Copyright (c) 2017, Cronos, All Rights reserved</small>
			  					</td>
			  				</tr>
			  			</table>

					</div>
				</installation-wizard-step>
				<installation-wizard-step>
			  		<div class="form-horizontal">

			  			<table width="100%">
			  				<tr>
			  					<td width="30%">
			  						<center><img src="/assets/img/database.png" style="width: 100% "></center>
			  					</td>
			  					<td width="70%" style="padding: 20px;">
			  						<b>Connection Database Setting</b>
			  						<div style="border: 1px solid; padding: 10px;">

			  							<div class="form-group"
										 	ng-class="{'has-error': userForm.groupId.$invalid && (userForm.groupId.$dirty || userForm.$submitted)}">
										    <label for="groupId" class="col-sm-4 control-label">Connection Type *</label>
										    <div class="col-sm-8">
										    	<select name="groupId" class="form-control"
												  ng-model="user.groupId"
												  ng-options="option.id as option.groupName for option in listGroup"
												  required selectpicker>
												  <option value="" disabled selected>Select your option</option>
												</select>
												<span class="help-block error-block basic-block">Required</span>
										    </div>
										</div>

										<div class="form-group" 
										  	ng-class="{'has-error': userForm.fullName.$invalid && (userForm.fullName.$dirty || userForm.$submitted)}">
										    <label for="fullName" class="col-sm-4 control-label">Connection Name *</label>
										    <div class="col-sm-8">
										      <input type="text" class="form-control" id="fullName" name="fullName" ng-model="user.fullName" required/>
										      <span class="help-block error-block basic-block">Required</span>
										    </div>
										</div>

										<div class="form-group" 
										  	ng-class="{'has-error': userForm.fullName.$invalid && (userForm.fullName.$dirty || userForm.$submitted)}">
										    <label for="fullName" class="col-sm-4 control-label">Hostname *</label>
										    <div class="col-sm-8">
										      <input type="text" class="form-control" id="fullName" name="fullName" ng-model="user.fullName" required/>
										      <span class="help-block error-block basic-block">Required</span>
										    </div>
										</div>

										<div class="form-group" 
										  	ng-class="{'has-error': userForm.fullName.$invalid && (userForm.fullName.$dirty || userForm.$submitted)}">
										    <label for="fullName" class="col-sm-4 control-label">Port *</label>
										    <div class="col-sm-8">
										      <input type="text" class="form-control" id="fullName" name="fullName" ng-model="user.fullName" required/>
										      <span class="help-block error-block basic-block">Required</span>
										    </div>
										</div>

										<div class="form-group" 
										  	ng-class="{'has-error': userForm.fullName.$invalid && (userForm.fullName.$dirty || userForm.$submitted)}">
										    <label for="fullName" class="col-sm-4 control-label">Service/SID *</label>
										    <div class="col-sm-8">
										      <input type="text" class="form-control" id="fullName" name="fullName" ng-model="user.fullName" required/>
										      <span class="help-block error-block basic-block">Required</span>
										    </div>
										</div>

										<div class="form-group" 
										  	ng-class="{'has-error': userForm.fullName.$invalid && (userForm.fullName.$dirty || userForm.$submitted)}">
										    <label for="fullName" class="col-sm-4 control-label">Username *</label>
										    <div class="col-sm-8">
										      <input type="text" class="form-control" id="fullName" name="fullName" ng-model="user.fullName" required/>
										      <span class="help-block error-block basic-block">Required</span>
										    </div>
										</div>

										<div class="form-group" 
										  	ng-class="{'has-error': userForm.fullName.$invalid && (userForm.fullName.$dirty || userForm.$submitted)}">
										    <label for="fullName" class="col-sm-4 control-label">Password *</label>
										    <div class="col-sm-8">
										      <input type="text" class="form-control" id="fullName" name="fullName" ng-model="user.fullName" required/>
										      <span class="help-block error-block basic-block">Required</span>
										    </div>
										</div>

										<div class="form-group" 
										  	ng-class="{'has-error': userForm.fullName.$invalid && (userForm.fullName.$dirty || userForm.$submitted)}">
										    <label for="fullName" class="col-sm-4 control-label">Database Name *</label>
										    <div class="col-sm-8">
										      <input type="text" class="form-control" id="fullName" name="fullName" ng-model="user.fullName" required/>
										      <span class="help-block error-block basic-block">Required</span>
										    </div>
										</div>
										<div class="form-group" >
											<div class="col-sm-8">	  
				  								<a class="btn btn-success btn-xs">Test Connection</a>
				  							</div>
			  							</div>
			  						</div>
			  					</td>
			  				</tr>
			  			</table>

					</div>
				</installation-wizard-step>

				<installation-wizard-step>
			  		<div class="form-horizontal">

			  			<table width="100%">
			  				<tr>
			  					<td width="30%">
			  						<center><img src="/assets/img/progress bar.gif" style="width: 100% "></center>
			  					</td>
			  					<td width="70%" style="padding: 20px;">
									<b>Process installing Cronos Module</b>
			  						<div style="border: 1px solid; padding: 10px;">
					  					Please wait while the InstallShield wizard install module for Cronos process. This may take several minutes
			  						</div>
										<br/>
			  						Status install connection:
			  						<div class="progress ng-scope">
			  							<div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
									    <span class="sr-only">40% Complete (success)</span>
									  	</div>
									</div>
			  					</td>
			  				</tr>
			  			</table>

					</div>
				</installation-wizard-step>

				<installation-wizard-step>
			  		<div class="form-horizontal">

			  			<table width="100%">
			  				<tr>
			  					<td width="30%">
			  						<center><img src="/assets/img/warn.png" style="width: 100% "></center>
			  					</td>
			  					<td width="70%" style="padding: 20px;">
									<b>Completed The Installation Patch</b>
			  						<div style="border: 1px solid; padding: 10px;">
						  					Patch Cronos module has been installed/failed on this server.
						  				</br>
						  				</br>
						  					Click finish to close the wizard.
						  				</br>
						  				</br>
						  				</br>
						  					Please restart service for activate this patch module
						  				</br>
						  				</br>
						  				</br>
						  				</br>  
			  						</div>
			  					</td>
			  				</tr>
			  			</table>

					</div>
				</installation-wizard-step>

			</installation-wizard>
  		</div>
      	
		<div class="modal-footer">
			 &nbsp;
		</div>

</form>
