<!-- <cronos-button-action></cronos-button-action> -->

<div class="row">
	<div class="col-md-12" ba-panel ba-panel-class="with-scroll">
	    <button ui-sref="userSettings.user.add" title="Add New" ng-show="insertUser" class="btn btn-info btn-icon"><i class="fa fa-plus-circle"></i></button>
	    <button ng-click = "modalDelete()" title="Delete" ng-show="deleteUser" class="btn btn-danger btn-icon"><i class="fa fa-trash-o"></i></button>
	    <button ui-sref="userSettings.user.edit({id: userId})" title="Edit" ng-show="editUser" class="btn btn-success btn-icon"><i class="fa fa-pencil-square-o"></i></button>
	</div>
</div>

	<div class="row">
	<div class="col-md-12">
	  <div ba-panel ba-panel-class="with-scroll">
	    <div class="horizontal-scroll">
	      	<table id="table-user" data-dt-table="dtConfig" data-dt-data="dtData" data-click-me="clickMe(selected, data)" class="display" selected-row="selectedRow(selected, tableData)"></table>
	    </div>
	  </div>
	</div>
</div>